<body>
  <h1>Check Your IP3 Physics Assignment Submission</h1>
  <form id="lookupForm">
    <label for="email">Enter your @students.edu.sg email:</label><br>
    <input type="email" id="email" name="email" required><br>
    <label for="nric">Enter last 4 characters of NRIC:</label><br>
    <input type="text" id="nric" name="nric" maxlength="4" required><br><br>
    <button type="submit">Search</button>
  </form>
  <div id="result"></div>

  <script>
    const form = document.getElementById('lookupForm');
    const resultDiv = document.getElementById('result');

    form.addEventListener('submit', function(e) {
      e.preventDefault();
      const email = document.getElementById('email').value.trim().toLowerCase();
      const nric = document.getElementById('nric').value.trim().toUpperCase();

      // Validate domain
      if (!email.endsWith('@students.edu.sg')) {
        resultDiv.innerHTML = `<p class="error">Only @students.edu.sg emails are allowed.</p>`;
        return;
      }

      resultDiv.innerHTML = "ðŸ”Ž Authenticating...";

      fetch('https://script.google.com/macros/s/AKfycbyS65XDwey-kWDcrti_Q8YVaXJvjwu2akZg61-Dr_Bclf1BoTAK-sQevkkcSG2ZTd63/exec', {
        method: 'POST',
        body: new URLSearchParams({ email: email, nric: nric })
      })
      .then(response => response.json())
      .then(data => {
        if (data.error) {
          resultDiv.innerHTML = `<p class="error">${data.error}</p>`;
        } else {
          // Separate first 4 rows
          let keys = Object.keys(data);
          let profileHTML = `
            <div class="profile-card">
              <h3>Profile</h3>`;
          for (let i = 0; i < 4; i++) {
            profileHTML += `
              <div class="profile-row">
                <span class="profile-label">${keys[i]}:</span> ${data[keys[i]]}
              </div>`;
          }
          profileHTML += `</div>`;

          // Remaining rows in a table
          let tableHTML = "<table class='details-table'>";
          for (let i = 4; i < keys.length; i++) {
            tableHTML += `
              <tr>
                <th>${keys[i]}</th>
                <td>${data[keys[i]]}</td>
              </tr>`;
          }
          tableHTML += "</table>";

          resultDiv.innerHTML = profileHTML + tableHTML;
        }
      })
      .catch(error => {
        resultDiv.innerHTML = `<p class="error">Error: ${error}</p>`;
      });
    });
  </script>
</body>
